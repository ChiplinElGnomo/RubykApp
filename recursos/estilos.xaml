<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="MineButtonStyle">
        <Setter Property="Background" Value="#FFC5C5C5"/>
        <Setter Property="Margin" Value="20,10,20,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="46"/>
        <Setter Property="Width" Value="146"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>

        <Setter Property="Content">
            <Setter.Value>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="C:\Users\Spidy\source\repos\Rubyk\recursos\minecrafticon.png" Width="30" Height="30" VerticalAlignment="Center"/>
                    <TextBlock Text="Minecraft" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" BlurRadius="10" ShadowDepth="3"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>




